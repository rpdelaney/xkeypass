# TODO: Check out xdokey to translate special characters into xkeysym strings

words="$1"

if [[ -z "$words" ]]; then
  echo "$words"
  while read words; do
    while test -n "$words"; do
      c=${words:0:1}     # Get the first character
      xdotool --clearmodifiers --delay 25 key $c
      words=${words:1}   # trim the first character
    done
  done
else
  while [[ -n "$words" ]]; do
    c=${words:0:1}     # Get the first character
    xdotool --clearmodifiers --delay 25 key $c
    words=${words:1}   # trim the first character
  done
fi

